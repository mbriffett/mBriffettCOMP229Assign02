<div id ="editPage">
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <!--hidden type for referencing id by name in contorller-->
                <input type="hidden" name="id" value="<%= contacts._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Name:</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact's Name"
                    name="name" 
                    value="<%= contacts.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone:</label>
                    <input type="number" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter the Contact's Phone Number"
                    name="phone" 
                    value="<%= contacts.phone %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">E-mail:</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact's E-mail"
                    name="email" 
                    value="<%= contacts.email %>"
                    required>
                </div>              
                <div id="contactBtns">
                <button class="btn btn-primary" type="submit" >
                    <i class="fas fa-edit"></i> Submit</button>
                <!--submit to same page using post method-->
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                </div>
            </form>
        </div>

    </div>
</div>
</div>